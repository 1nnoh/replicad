{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module":"es2015",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib"
  },
  "include": [
    "src"
  ],
  "typedocOptions": {
      "watch": true,
      "readme": "none",
      "excludeProtected": true
  }
}

